<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <input type="checkbox" name="completed" checked>
      <% else %>
        <input type="checkbox" name="completed">
      <% end %>
      <%= link_to task.title, task_path(task)%>
    </li>
  <% end %>
</ul>

<%= link_to "Add new task", new_task_path %>
